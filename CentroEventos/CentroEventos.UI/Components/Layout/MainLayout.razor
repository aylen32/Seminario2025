@inherits LayoutComponentBase
@inject IServicioSesion servicio
@using CentroEventos.Aplicacion.Servicio
@inject NavigationManager navegar
<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <a href="#" class="navbar-brand"@onclick="IrPerfil">Perfil</a>
           <a href="#" class="navbar-brand" @onclick="CerrarSesion">Salir</a>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

    <p>@mensajeDebug</p>

@code {
    private string mensajeDebug = "";

    private void CerrarSesion()
    {
       servicio.CerrarSesion();
        navegar.NavigateTo("/", false);
    }
    private void IrPerfil(){
        navegar.NavigateTo("/perfil",false);
    }
}

